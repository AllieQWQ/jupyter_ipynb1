<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?XML-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
<!-- 1.链接数据的用户名-->
    <property>
        <name>javax.jdo.option.ConnectionUserName</name>
        <value>root</value>
    </property>

<!-- 2.链接数据库的密码-->
    <property>
        <name>javax.jdo.option.ConnectionPassword</name>
        <value>123456</value>
    </property>

<!-- 3.mysql数据库访问路径，没有则自动创建-->
    <property>
        <name>javax.jdo.option.ConnectionURL</name>
        <value>jdbc:mysql://master:3306/hive?userSSL=false</value>
    </property>

<!-- 4.链接数据库的驱动-->
    <property>
        <name>javax.jdo.option.ConnectionDriverName</name>
        <value>com.mysql.jdbc.Driver</value>
    </property>

<!-- 5.元数据是否校验-->
    <property>
        <name>hive.metastore.schema.verification</name>
        <value>false</value>
    </property>

<!-- 6.是否自动创建核心文件-->
    <property>
        <name>datanucleus.schema.autoCreateAll</name>
        <value>true</value>
    </property>

<!-- 7.thrift 服务器绑定的主机-->
    <property>
        <name>hive.servers2.thrift.bind.host</name>
        <value>master</value>
    </property>

<!-- 8.默认存储路径地址-->
    <property>
        <name>hive.metastore.warehouse.dir</name>
        <value>hdfs://master:10000/user/hive/warehouse</value>
    </property>

<!-- 9.设置显示表头字段名-->
    <property>
        <name>hive.cli.print.current.db</name>
        <value>true</value>
    </property>

    <property>
        <name>hive.cli.print.header</name>
        <value>true</value>
    </property>
</configuration>